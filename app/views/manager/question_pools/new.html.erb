<div class="review">

  <% QuestionPool.where(restaurant_id: params[:restaurant_id]).last.questions.each do |question| %>
  <p class="questions">
    <% @question = question %>
    <%= question.name %>
    <% if question.cat == '0' %>
    (text)
    <% else %>
    (rating)
    <% end %>


  <%= link_to 'DELETE', manager_restaurant_question_pool_path(@restaurant, question),
        method: :delete,
        class: "deleteajax", remote:true %>
  </p>
  <% end %>

  <div class="reviewtitle"><h2>Cr√©er des questions</h2></div>

  <%= simple_form_for [:manager, @restaurant, @question_pool], html: { class: "form-review"} do |f| %>
      <div class="inputboxes">
        <%= f.input :restaurant_id, as: :hidden %>

        <%= f.simple_fields_for :questions do |q_form| %>
        <%= q_form.input :cat, label: 'Text', :input_html => { class: "inputtype" }, as: :boolean %>
        <%= q_form.input :cat, label: 'Rating', :input_html => { class: "inputtype" }, as: :boolean %>
        <%= q_form.input :name, label: 'Question', :input_html => { class: "inputtype" } %>
        <% end %>

        <h2><%= link_to "+", '',class: "newq" , remote: true %></h2>
      </div>
        <%= f.submit "Publier", class: "btn btn-ghost", remote: true %>
  <% end %>
</div>
