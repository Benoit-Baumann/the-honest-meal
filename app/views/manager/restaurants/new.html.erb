<div class="main-container">
  <h1> Ajouter votre Restaurant</h1>
  <br>
  <div class="form-container">
<%= simple_form_for [:manager, @restaurant] do |f| %>
  <div class="text-input-form">
    <h4><%= f.label :name %></h4>
  <p><%= f.text_field :name %></p></div>
  <div class="text-input-form">
    <h4><%= f.label :category %></h4>
  <p><%= f.text_field :category %></p></div>
  <div class="text-input-form">
    <h4><%= f.label :address %></h4>
  <p><%= f.text_field :address %></p></div>
  <div class="text-input-form">
    <h4><%= f.label :description %></h4>
  <p><%= f.text_field :description %></p></div>
  <div class="text-input-form">
    <h4><%= f.label :hours %></h4>
  <p><%= f.text_field :hours %></p></div>
  <div class="text-input-form">
    <h4><%= f.label :pricing %></h4>
  <p><%= f.text_field :pricing %></p></div>
  <div class="text-input-form">
    <h4><%= f.label :phone_number %></h4>
  <p><%= f.text_field :phone_number %></p></div>
  <div class="text-input-form">
    <h4><%= f.label :website %></h4>
  <p><%= f.text_field :website %></p></div>
  <div class="add-btn-resto"><%= f.submit %></div>
<% end %>
 </div>
</div>
