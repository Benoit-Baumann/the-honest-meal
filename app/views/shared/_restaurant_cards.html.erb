<div class="card-grid">
    <% restaurants.each do |restaurant| %>
    <% if restaurant.restaurant_photos.first != nil %>
        <% background_url = cl_image_path restaurant.restaurant_photos.first.photo, crop: :fill %>
    <% else %>
        <% background_url = image_path 'restaurant1.jpg' %>
    <% end %>
    <div class="card-restaurant">
        <%= link_to "", restaurant_path(restaurant), class: 'card-link' %>
        <img src="<%= background_url %>" />
        <div class="card-restaurant-infos">
            <div class="card-restaurant-infos-left">
                <h2><%= restaurant.name %></h2>
                <p class="restaurant-category"><%= restaurant.category %></p>
            </div>
            <div class="card-restaurant-infos-right">
                <p class="restaurant-phone">TÃ©l: <%= restaurant.phone_number %></p>
                <div class="restaurant-rating">
                    <%= render partial: 'shared/stars_rating', locals: {rating: restaurant.rating} %>
                    <p><%= restaurant.reviews.count %> avis</p>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</div>
