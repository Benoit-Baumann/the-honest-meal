<div class="custom-container">
  <div class="sign-title">
    <h2>Ecrire un nouvel avis</h2>

    <div class="sign-up form-inputs">
      <%= simple_form_for [@review] do |f| %>
        <%= f.input :restaurant_id, as: :hidden %>
        <%= f.input :username, label: "Nom d'utilisateur", required: true unless user_signed_in? %>
        <%= f.input :content, label: 'Votre avis' %>
        <%= f.input :rating, label: 'Note' %>
        <%= f.submit "Publier", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

</div>