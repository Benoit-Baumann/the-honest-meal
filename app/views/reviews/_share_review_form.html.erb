<div class="details-container share-review">

  <h2 class="title-page">Envoyer un nouveau lien</h2>

  <%= form_tag reviews_path, class: "", method: :post, remote: true do |f| %>
      <div class="share-review-form-container">
          <%= select_tag :restaurant, options_from_collection_for_select(restaurants, "id", "name") %>
          <%= text_field_tag :email, nil, placeholder: "John.doe@example.com" %>
          <%= button_tag(type: "submit", class: "publier-questionnaire") do %>
            <p class="link-text">Envoyer</p>
          <% end %>
          <p class="success-or-error-msg">Email envoy√© !</p>
      </div>
      <div id="close-share-modal">
        <%= button_tag(type: 'button', onclick: "javascript:closeShareReviewModal()", class: "publier-questionnaire", id: "close_share_review_modal_btn") do %>
          <p class="link-text">Fermer</p>
        <% end %>
      </div>
  <% end %>

</div>